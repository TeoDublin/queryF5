<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox minHeight="300.0" minWidth="400.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.views.viewQuery">
    <VBox VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </VBox.margin>
        <VBox prefWidth="100.0">
            <Label text="Refresh Every (milliseconds)"/>
            <HBox>
                <Spinner fx:id="spinner1" prefHeight="25.0" prefWidth="457.0"/>
            </HBox>
        </VBox>
        <VBox prefHeight="200.0" prefWidth="100.0">
            <Label text="Query"/>
            <HBox>
                <TextArea fx:id="textArea1" promptText="query here" wrapText="true"/>
            </HBox>
        </VBox>
    </VBox>
    <VBox VBox.vgrow="NEVER">
        <HBox prefHeight="30.0" VBox.vgrow="ALWAYS">
            <Button fx:id="btnGo" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="25.0"
                    prefWidth="457.0" text="GO" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </HBox.margin>
            </Button>
        </HBox>
    </VBox>
</VBox>
